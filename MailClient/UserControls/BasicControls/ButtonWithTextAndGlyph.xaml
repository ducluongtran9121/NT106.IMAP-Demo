<Button
    x:Class="MailClient.UserControls.BasicControls.ButtonWithTextAndGlyph"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:MailClient.UserControls.BasicControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Loaded="Button_Loaded"
    mc:Ignorable="d">
    <Button.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/ResourceDictionaries/CustomButtonStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Button.Resources>
    <Button.Style>
        <Style BasedOn="{StaticResource ButtonDefaultStyle}" TargetType="Button" />
    </Button.Style>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <FontIcon FontSize="{x:Bind FontSize}" Glyph="{x:Bind Glyph}" />
        <Grid x:Name="SpaceSeparator" Grid.Column="1" />
        <TextBlock
            Grid.Column="2"
            FontSize="{x:Bind FontSize}"
            Text="{x:Bind Text}" />
    </Grid>
</Button>