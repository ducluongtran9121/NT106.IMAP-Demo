<Page
    x:Class="MailClient.Views.SettingsPages.Appearances"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:local="using:MailClient.Views.SettingsPages"
    Loaded="Page_Loaded">
    <Grid>
        <StackPanel
            Spacing="20">
            <TextBlock
                Text="Appearances ✨"
                FontSize="30"
                FontWeight="SemiBold"/>
            <StackPanel
                Spacing="5">
                <TextBlock
                    Text="Themes:"/>
                <ComboBox
                    x:Name="ThemeChooser"
                    MinWidth="200"
                    SelectionChanged="ThemeChooser_SelectionChanged">
                    <ComboBoxItem 
                        Content="Windows Default"/>
                    <ComboBoxItem 
                        Content="Light"/>
                    <ComboBoxItem 
                        Content="Dark"/>
                </ComboBox>
            </StackPanel>
        </StackPanel>
        
    </Grid>
</Page>
