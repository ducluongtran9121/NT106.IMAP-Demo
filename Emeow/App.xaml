<Application
    x:Class="Emeow.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Emeow">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls"/>
                <ResourceDictionary>
                    <ResourceDictionary.ThemeDictionaries>
                        <ResourceDictionary x:Key="Light">
                            <SolidColorBrush x:Key="PageBackgroundColorDefaultBrush" Color="#B3FFFFFF"/>
                            <SolidColorBrush x:Key="PageBackgroundColorLowBrush" Color="#FFF3F3F3"/>
                            <SolidColorBrush x:Key="ControlColorDefaultBrush" Color="#B3FFFFFF"/>
                            <SolidColorBrush x:Key="ControlColorLowBrush" Color="#FFF3F3F3"/>
                            <SolidColorBrush x:Key="ControlColorPointerOverBrush" Color="#FFF3F3F3"/>
                            <SolidColorBrush x:Key="TextSelectionHighlightColorDefaultBrush" Color="#DACCCCCC"/>
                        </ResourceDictionary>
                    </ResourceDictionary.ThemeDictionaries>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
