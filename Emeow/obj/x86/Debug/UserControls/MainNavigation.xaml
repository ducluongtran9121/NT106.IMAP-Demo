<UserControl x:ConnectionId='1'
    x:Class="Emeow.UserControls.MainNavigation"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Emeow.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:muxmedia="using:Microsoft.UI.Xaml.Media"
    xmlns:usr="using:Emeow.User"
    xmlns:ci="using:Emeow.ControlItems"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Light">
                    <muxmedia:AcrylicBrush 
                        x:Key ="NavigationViewExpandedPaneBackground"
                        BackgroundSource="HostBackdrop"
                        FallbackColor="White"
                        TintColor="{ThemeResource SystemChromeWhiteColor}"
                        TintOpacity="0.6"/>
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>

            <DataTemplate
                x:Key="NewMailNavItem" 
                                         >
                <muxc:NavigationViewItem x:ConnectionId='8' 
                    BorderThickness="0.8"
                    CanDrag="False"
                                              
                                      >
                    <muxc:NavigationViewItem.Icon>
                        <FontIcon x:ConnectionId='9'                       />
                    </muxc:NavigationViewItem.Icon>
                </muxc:NavigationViewItem>
            </DataTemplate>

            <DataTemplate
                x:Key="AccountsNavItem" 
                                            >
                <muxc:NavigationViewItem x:ConnectionId='5'
                    BorderThickness ="0.8"
                                              
                                      
                                                    >
                    <muxc:NavigationViewItem.Icon>
                        <FontIcon x:ConnectionId='6'                       />
                    </muxc:NavigationViewItem.Icon>
                </muxc:NavigationViewItem>
            </DataTemplate>

            <DataTemplate 
                x:Key="SpaceSeparatorNavItem" 
                                                  >
                <muxc:NavigationViewItemHeader
                    Content=""
                    MaxHeight="12"/>
            </DataTemplate>
            <local:NavigationItemDataTemplateSelector
                x:Key="NavItemSelector"
                NewMailNavigationItemTemplate="{StaticResource NewMailNavItem}"
                AccountNavigationItemTemplate="{StaticResource AccountsNavItem}"
                SpaceSeparatorNavigationItemTemplate="{StaticResource SpaceSeparatorNavItem}"/>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <muxc:NavigationView x:ConnectionId='10' 
            x:Name="MainNavigationView"                
            IsBackButtonVisible="Collapsed"
            IsTitleBarAutoPaddingEnabled="False"
            MenuItemTemplateSelector="{StaticResource NavItemSelector}"
                                            
            
                                                        >

            <muxc:NavigationView.PaneHeader>
                <muxc:NavigationViewItemHeader x:ConnectionId='11'
                x:Name="AppTitle"
                Content="Emeow"
                FontSize="70"
                VerticalAlignment="Center"/>
            </muxc:NavigationView.PaneHeader>

            <ScrollViewer>
                <Frame x:ConnectionId='12'
                x:Name="ContentFrame"
                Background="{StaticResource PageBackgroundColorDefaultBrush}">
                    <Frame.ContentTransitions>
                        <TransitionCollection>
                            <NavigationThemeTransition />
                        </TransitionCollection>
                    </Frame.ContentTransitions>
                </Frame>
            </ScrollViewer>
        </muxc:NavigationView>
    </Grid>
</UserControl>

