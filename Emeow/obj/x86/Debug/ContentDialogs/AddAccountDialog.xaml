<ContentDialog x:ConnectionId='1'
    x:Class="Emeow.ContentDialogs.AddAccountDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Emeow.ContentDialogs"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Sign in"
    PrimaryButtonText="Add"
    SecondaryButtonText="Close"
    DefaultButton="Primary"
                                                         
                                                             
    CornerRadius="4">
    <ContentDialog.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/ResourceDictionaries/CustomTextBoxStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </ContentDialog.Resources>
    <StackPanel>
        <TextBlock Text="Enter your email account username and password."/>
        <Grid MinHeight="20"/>
        <RelativePanel>
            <TextBlock x:ConnectionId='4' 
                RelativePanel.AlignLeftWithPanel="True"
                RelativePanel.AlignVerticalCenterWithPanel="True"
                x:Name="UserNameTxbl"
                Text="User Name:"/>
            <Grid x:ConnectionId='5'
                x:Name="Separator"
                MinWidth="10"
                RelativePanel.RightOf="UserNameTxbl"/>
            <TextBox 
                RelativePanel.AlignRightWithPanel="True"
                RelativePanel.RightOf="Separator"
                MinWidth="300"
                Style="{StaticResource CustomTextBoxStyle1}"/>
        </RelativePanel>
        <Grid MinHeight="15"/>
        <RelativePanel>
            <TextBlock x:ConnectionId='2' 
                RelativePanel.AlignLeftWithPanel="True"
                RelativePanel.AlignVerticalCenterWithPanel="True"
                x:Name="PWdTxbl"
                Text="Password:"/>
            <Grid x:ConnectionId='3'
                x:Name="Separator1"
                MinWidth="21"
                RelativePanel.RightOf="PWdTxbl"/>
            <PasswordBox 
                RelativePanel.AlignRightWithPanel="True"
                RelativePanel.RightOf="Separator1"
                MinWidth="300"/>
        </RelativePanel>
    </StackPanel>
</ContentDialog>

